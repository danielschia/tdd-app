<% if @customer.errors.any? %>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1><%= t('new_customer')%></h1>

<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br/>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br/>
  <%= f.label :smoker %>
  <% { 'positive': true, 'negative': false }.each do |k, v| %>
    <%= f.radio_button :smoker, v %> <%= t("options.#{k}") %>
  <% end %>
  <br/>
  <%= f.submit t('activerecord.models.customer.create_client')%>
<% end %>